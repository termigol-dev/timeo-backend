{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",

    "rootDir": ".",
    "outDir": "./dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "removeComments": true,

    "incremental": true,
    "skipLibCheck": true,
    "strict": false
  },

  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "generated/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}